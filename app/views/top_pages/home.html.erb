<% provide(:title, 'Home') %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title"><%= @user.name %></h2>
        </div>
        <div class="panel-body">
            <img class="media-object img-rounded img-responsive" src="<%= gravatar_url(@user, { size: 150 }) %>" alt="">
        </div>
      </div>
      <% if current_user == @user %>
          <%= link_to  'New Post', new_message_path, class: 'btn btn-default' %>
          <%= render 'relationships/follow_button', user: @user %>
          <%= link_to  'Account delete', @user, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-default' %>
      <% end %>
      <%= render 'relationships/follow_button', user: @user %>
    </aside>
    <div class="col-xs-9">
      <%= render 'messages/main', messages: @messages %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Tandempartner Suchen Site</h1>
      <%= link_to 'Sign Up Now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>