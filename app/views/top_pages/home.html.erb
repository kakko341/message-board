<% provide(:title, 'Home') %>
<% if logged_in? %>
  <div class="row">
      <aside class="col-xs-3">
        <div class="panel panel-default">
          <div class="panel-heading">
              <h2 class="panel-title"><%= link_to @user.name, @user %></h2>
          </div>
          <div class="panel-body">
              <img class="media-object img-rounded img-responsive" src="<%= gravatar_url(@user, { size: 150 }) %>" alt="">
          </div>
        </div>
        <% if current_user == @user %>
            <%= link_to  'New Post', new_message_path, class: 'btn btn-default' %>
            <%= render 'relationships/follow_button', user: @user %>
            <%= link_to  'Account delete', @user, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-default' %>
        <% end %>
        <%= render 'relationships/follow_button', user: @user %>
      </aside>
      <div class="col-xs-9">
        <%= form_tag root_path, :method => 'get'  do %>
          <%= text_field_tag :search, params[:search], placeholder: 'Search' %>
          <%= submit_tag 'Search', :name => nil %>
        <% end %>
        <% if @feed_items.any? %>
          <ol class="messages">
            <%= render 'messages/main' %>
          </ol>
          <%= paginate @feed_items %>
        <% end %>
      </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Tandempartner Suchen Site</h1>
      <%= link_to 'Sign Up Now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
    <br>
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.hidden_field :email, value: "marius@gmail.com" %>
      <%= f.hidden_field :password, value: "marius" %>
      <%= f.submit "Log in as a test user", class:"btn btn-success mt-3 w-100"%>
    <% end %>
  </div>
<% end %>