<% if users.any? %>
  <ul class="media-list">
    <% users.each do |user| %>
      <li class="media">
        <div class="media-left">
          <%= link_to user_path(user) do %>
            <img class="media-object img-rounded" src="<%= gravatar_url(user, { size: 70 }) %>" alt="">
          <% end %>
        </div>
        <div class="media-body">
          <ul>
            <li><strong><%= link_to user.name, user_path(user) %></strong></li>
            <li>Speak: <%= user.speak %></li>
            <li>Offer: <%= user.offer %></li>
          </ul>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>