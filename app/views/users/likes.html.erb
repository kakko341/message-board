<div class="row">
    <aside class="col-xs-6">
        <%= render 'user.info', user: @user %>
    </aside>
    <div class="col-xs-6">
        <ul class="nav nav-tabs nav-justified">
            <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>Post <span class="badge"><%= @count_messages %></span><% end %></li>
            <li class="<%= 'active' if current_page?(followings_user_path(@user)) %>"><%= link_to followings_user_path(@user) do %>Following <span class="badge"><%= @count_followings %></span><% end %></li>
            <li class="<%= 'active' if current_page?(followers_user_path(@user)) %>"><%= link_to followers_user_path(@user) do %>Follower <span class="badge"><%= @count_followers %></span><% end %></li>
            <li class="<%= 'active' if current_page?(likes_user_path(@user)) %>"><%= link_to likes_user_path(@user) do %>Like <span class="badge"><%= @count_favorites %></span><% end %></li>
        </ul>
        <%= render 'messages/user_messages', messages: @favmessages %>
    </div>
</div>
