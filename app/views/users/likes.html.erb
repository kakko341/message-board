<div class="row">
    <aside class="col-xs-2">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><%= @user.name %></h3>
            </div>
            <div class="panel-body">
                <img class="media-object img-rounded img-responsive" src="<%= gravatar_url(@user, { size: 250 }) %>" alt="">
            </div>
        </div>
        <% if current_user == @user %>
            <%= link_to  '新規メッセージの投稿', new_message_path, class: 'btn btn-default' %>
            <%= render 'relationships/follow_button', user: @user %>
        <% end %>
        <%= render 'relationships/follow_button', user: @user %>
    </aside>
    <div class="col-xs-10">
        <ul class="nav nav-tabs nav-justified">
            <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>メッセージ <span class="badge"><%= @count_messages %></span><% end %></li>
            <li class="<%= 'active' if current_page?(followings_user_path(@user)) %>"><%= link_to followings_user_path(@user) do %>フォロー <span class="badge"><%= @count_followings %></span><% end %></li>
            <li class="<%= 'active' if current_page?(followers_user_path(@user)) %>"><%= link_to followers_user_path(@user) do %>フォロワー <span class="badge"><%= @count_followers %></span><% end %></li>
            <li class="<%= 'active' if current_page?(likes_user_path(@user)) %>"><%= link_to likes_user_path(@user) do %>お気に入り <span class="badge"><%= @count_favorites %></span><% end %></li>
        </ul>
        <%= render 'messages/user_messages', messages: @favmessages %>
    </div>
</div>
