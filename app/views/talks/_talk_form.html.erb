<form class="talk_form">
  <input type="hidden" name="from_id" value="<%= from_user.id %>">
  <input type="hidden" name="to_id" value="<%= to_user.id %>">
  <input type="hidden" name="room_id" value="<%= room_id %>">
  <label>Send Message to <%= to_user.name %></label><br>
  <textarea name="content" class="talk_text" data-behavior="chat_speaker" placeholder="Write message here"
            cols="70" rows="2"></textarea>
</form>